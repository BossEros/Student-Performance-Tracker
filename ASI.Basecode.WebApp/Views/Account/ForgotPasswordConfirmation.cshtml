@{
    ViewData["Title"] = "Password Reset Link Sent";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="fas fa-check-circle me-2"></i>
                    Password Reset Link Sent
                </h4>
            </div>
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-envelope-open text-success" style="font-size: 4rem;"></i>
                </div>
                
                <h5 class="text-success mb-3">Check Your Email</h5>
                
                <p class="text-muted mb-4">
                    @ViewBag.Message
                </p>
                
                @if (ViewBag.Email != null)
                {
                    <p class="small text-muted">
                        Email sent to: <strong>@ViewBag.Email</strong>
                    </p>
                }
                
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Important:</strong> The password reset link will expire in 24 hours for security reasons.
                </div>
                
                <div class="mt-4">
                    <h6>Didn't receive the email?</h6>
                    <ul class="list-unstyled small text-muted">
                        <li>• Check your spam/junk folder</li>
                        <li>• Make sure you entered the correct email address</li>
                        <li>• Wait a few minutes for the email to arrive</li>
                    </ul>
                </div>
                
                <div class="mt-4">
                    <a asp-action="Login" class="btn btn-primary me-2">
                        <i class="fas fa-sign-in-alt me-1"></i>
                        Back to Login
                    </a>
                    <a asp-action="ForgotPassword" class="btn btn-outline-secondary">
                        <i class="fas fa-redo me-1"></i>
                        Try Again
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>