@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="fas fa-check-circle me-2"></i>
                    Password Reset Successful
                </h4>
            </div>
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-shield-alt text-success" style="font-size: 4rem;"></i>
                </div>
                
                <h5 class="text-success mb-3">Password Updated Successfully!</h5>
                
                <p class="text-muted mb-4">
                    @ViewBag.Message
                </p>
                
                <div class="alert alert-success">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>What's Next?</strong> You can now log in to your account using your new password.
                </div>
                
                <div class="mt-4">
                    <a asp-action="Login" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Sign In Now
                    </a>
                </div>
                
                <div class="mt-4">
                    <h6 class="text-muted">Security Tips:</h6>
                    <ul class="list-unstyled small text-muted">
                        <li>• Keep your new password secure</li>
                        <li>• Don't share it with anyone</li>
                        <li>• Consider using a password manager</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>